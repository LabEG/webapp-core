{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2020",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "diagnostics": true,
        "downlevelIteration": false,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": false,
        "pretty": true,
        "strict": true,
        "strictFunctionTypes": false,
        "noEmit": false,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/**/*"
    ]
}